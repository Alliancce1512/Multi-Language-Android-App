<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android           ="http://schemas.android.com/apk/res/android"
    xmlns:app               ="http://schemas.android.com/apk/res-auto"
    android:layout_width    ="match_parent"
    android:layout_height   ="match_parent"
    android:orientation     ="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id              ="@+id/topAppBar"
        android:layout_width    ="match_parent"
        android:layout_height   ="?attr/actionBarSize"
        app:title               ="@string/bluetooth" />

    <LinearLayout
        android:layout_width    ="match_parent"
        android:layout_height   ="match_parent"
        android:orientation     ="vertical"
        android:padding         ="16dp">

    <com.google.android.material.chip.Chip
        android:id                  ="@+id/txtStatus"
        android:layout_width        ="match_parent"
        android:layout_height       ="wrap_content"
        android:text                ="@string/ready"
        app:chipIconEnabled         ="true"
        app:chipIcon                ="@android:drawable/ic_menu_info_details" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width        ="match_parent"
        android:layout_height       ="wrap_content"
        android:layout_marginTop    ="12dp">

        <com.google.android.material.button.MaterialButton
            android:id              ="@+id/btnToggleScan"
            android:layout_width    ="wrap_content"
            android:layout_height   ="wrap_content"
            android:text            ="@string/start_scan"
            app:icon                ="@android:drawable/ic_menu_search"
            app:iconPadding         ="8dp"
            app:iconGravity         ="textStart"
            style                   ="?attr/materialButtonOutlinedStyle" />

        <com.google.android.material.button.MaterialButton
            android:id                  ="@+id/btnEnableBt"
            android:layout_width        ="wrap_content"
            android:layout_height       ="wrap_content"
            android:text                ="@string/enable_bluetooth"
            app:icon                    ="@android:drawable/stat_sys_data_bluetooth"
            app:iconPadding             ="8dp"
            app:iconGravity             ="textStart"
            style                       ="?attr/materialButtonOutlinedStyle" />

        <com.google.android.material.button.MaterialButton
            android:id                  ="@+id/btnDisconnect"
            android:layout_width        ="wrap_content"
            android:layout_height       ="wrap_content"
            android:text                ="@string/disconnect"
            android:visibility          ="gone"
            app:icon                    ="@android:drawable/ic_menu_close_clear_cancel"
            app:iconPadding             ="8dp"
            app:iconGravity             ="textStart"
            style                       ="?attr/materialButtonOutlinedStyle" />

        <com.google.android.material.button.MaterialButton
            android:id                  ="@+id/btnClear"
            android:layout_width        ="wrap_content"
            android:layout_height       ="wrap_content"
            android:text                ="@string/clear_list"
            app:icon                    ="@android:drawable/ic_menu_delete"
            app:iconPadding             ="8dp"
            app:iconGravity             ="textStart"
            style                       ="?attr/materialButtonOutlinedStyle" />

        <androidx.constraintlayout.helper.widget.Flow
            android:id                              ="@+id/buttonsFlow"
            android:layout_width                    ="0dp"
            android:layout_height                   ="wrap_content"
            app:constraint_referenced_ids           ="btnToggleScan,btnEnableBt,btnDisconnect,btnClear"
            app:flow_wrapMode                       ="chain"
            app:flow_horizontalStyle                ="packed"
            app:flow_horizontalGap                  ="8dp"
            app:flow_verticalGap                    ="8dp"
            app:flow_horizontalBias                 ="0"
            app:layout_constraintTop_toTopOf        ="parent"
            app:layout_constraintStart_toStartOf    ="parent"
            app:layout_constraintEnd_toEndOf        ="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
        android:id                  ="@+id/progressScan"
        style                       ="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
        android:layout_width        ="match_parent"
        android:layout_height       ="4dp"
        android:indeterminate       ="true"
        android:visibility          ="gone"
        android:layout_marginTop    ="8dp" />

    <TextView
        android:layout_width        ="match_parent"
        android:layout_height       ="wrap_content"
        android:text                ="@string/discovered_devices"
        android:layout_marginTop    ="12dp"
        android:textStyle           ="bold" />

    <ListView
        android:id                  ="@+id/listDevices"
        android:layout_width        ="match_parent"
        android:layout_height       ="0dp"
        android:layout_weight       ="1"
        android:dividerHeight       ="1dp" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width        ="match_parent"
        android:layout_height       ="wrap_content"
        android:layout_marginTop    ="12dp"
        app:cardUseCompatPadding    ="true">

        <TextView
            android:id                  ="@+id/txtGattValue"
            android:layout_width        ="match_parent"
            android:layout_height       ="wrap_content"
            android:padding             ="12dp"
            android:fontFamily          ="monospace"
            android:text                ="@string/characteristic_value"
            android:textIsSelectable    ="true" />
    </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</LinearLayout>